<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyShoppingApp.ConfigurationPage"
             Title="Configuration">

    <StackLayout Padding="10">
        <Label Text="Configure Tax Rate" />
        <Entry x:Name="TaxRateEntry" Placeholder="Enter tax rate (e.g., 0.07 for 7%)" Keyboard="Numeric" />
        <Button Text="Save" Clicked="OnSaveTaxRateClicked" />
    </StackLayout>

</ContentPage>